<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/kayu">

    <TextView
        android:id="@+id/textView"
        android:layout_width="268dp"
        android:layout_height="77dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="13dp"
        android:layout_marginTop="11dp"
        android:gravity="center"
        android:text="Permarkahan Pelajar"
        android:textColor="@android:color/background_dark"
        android:textSize="30sp" />

    <Button
        android:id="@+id/btnPensyarah"
        android:layout_width="211dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="175dp"
        android:text="Pensyarah" />

    <Button
        android:id="@+id/btnPelajar"
        android:layout_width="212dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnPensyarah"
        android:layout_centerHorizontal="true"
        android:text="Pelajar" />

    <Button
        android:id="@+id/btnMarkah"
        android:layout_width="209dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnPelajar"
        android:layout_centerHorizontal="true"
        android:text="Pengiraan Markah" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="94dp"
        android:layout_height="79dp"
        android:layout_alignTop="@+id/textView"
        android:layout_toStartOf="@+id/textView"
        app:srcCompat="@drawable/logo" />
</RelativeLayout>