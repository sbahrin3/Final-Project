<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/kayu">

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="134dp"
        android:layout_height="106dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="1dp"
        app:srcCompat="@drawable/logo" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="220dp"
        android:layout_height="105dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="1dp"
        android:gravity="center"
        android:text="Borang Permarkahan"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/textView13"
        android:layout_width="131dp"
        android:layout_height="49dp"
        android:layout_alignStart="@+id/imageView3"
        android:layout_alignParentTop="true"
        android:layout_marginStart="-10dp"
        android:layout_marginTop="171dp"
        android:gravity="center"
        android:text="No Matrik"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textView14"
        android:layout_width="124dp"
        android:layout_height="48dp"
        android:layout_alignStart="@+id/imageView3"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="279dp"
        android:gravity="center"
        android:text="Subjek"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textView17"
        android:layout_width="124dp"
        android:layout_height="43dp"
        android:layout_alignStart="@+id/imageView3"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="0dp"
        android:layout_marginBottom="327dp"
        android:gravity="center"
        android:text="Markah"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/noMatrik"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textView13"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="1dp"
        android:layout_marginBottom="3dp"
        android:ems="10"
        android:hint="Masukkan Nombor Matrik"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/subjek"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/markah"
        android:layout_alignStart="@+id/noMatrik"
        android:layout_marginStart="2dp"
        android:layout_marginTop="7dp"
        android:ems="10"
        android:hint="Masukkan Subjek"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/markah"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/noMatrik"
        android:layout_alignTop="@+id/textView17"
        android:layout_marginStart="2dp"
        android:layout_marginTop="-2dp"
        android:ems="10"
        android:hint="Masukkan Markah"
        android:inputType="textPersonName" />

    <Button
        android:id="@+id/bCheckin"
        android:layout_width="105dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="45dp"
        android:layout_marginBottom="175dp"
        android:text="Check In" />

    <Button
        android:id="@+id/bView"
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/bCheckin"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="-1dp"
        android:layout_marginEnd="48dp"
        android:text="View" />

    <Button
        android:id="@+id/btnBack"
        android:layout_width="128dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="139dp"
        android:layout_marginBottom="16dp"
        android:text="Back" />

    <Button
        android:id="@+id/bUpdate"
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/bView"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="1dp"
        android:layout_marginBottom="77dp"
        android:text="Update" />

    <Button
        android:id="@+id/bDelete"
        android:layout_width="103dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/bUpdate"
        android:layout_alignEnd="@+id/bCheckin"
        android:layout_marginTop="-1dp"
        android:layout_marginEnd="1dp"
        android:text="Delete" />

    <TextView
        android:id="@+id/textView25"
        android:layout_width="131dp"
        android:layout_height="44dp"
        android:layout_alignStart="@+id/imageView3"
        android:layout_alignParentTop="true"
        android:layout_marginStart="-9dp"
        android:layout_marginTop="122dp"
        android:gravity="center"
        android:text="Id Markah"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/idMarkah"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/noMatrik"
        android:layout_alignTop="@+id/textView25"
        android:ems="10"
        android:hint="No Need To Fill"
        android:inputType="textPersonName" />
</RelativeLayout>