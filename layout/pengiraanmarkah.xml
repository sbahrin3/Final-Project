<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/kayu">

    <TextView
        android:id="@+id/textView28"
        android:layout_width="238dp"
        android:layout_height="69dp"
        android:layout_alignStart="@+id/button15"
        android:layout_alignTop="@+id/imageView7"
        android:gravity="center"
        android:text="Mark Calculator"
        android:textColor="@android:color/background_dark"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/textView29"
        android:layout_width="76dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="24dp"
        android:layout_marginTop="132dp"
        android:gravity="center"
        android:text="PB"
        android:textColor="@android:color/background_dark"
        android:textSize="24sp" />

    <EditText
        android:id="@+id/editText10"
        android:layout_width="238dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView28"
        android:layout_alignTop="@+id/textView29"
        android:ems="10"
        android:hint="Insert PB Mark"
        android:inputType="textPersonName"
        android:textColor="@android:color/background_dark" />

    <TextView
        android:id="@+id/textView30"
        android:layout_width="76dp"
        android:layout_height="47dp"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/textView29"
        android:layout_marginTop="202dp"
        android:gravity="center"
        android:text="PA"
        android:textColor="@android:color/background_dark"
        android:textSize="24sp" />

    <EditText
        android:id="@+id/editText11"
        android:layout_width="238dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView28"
        android:layout_alignTop="@+id/textView30"
        android:ems="10"
        android:hint="Insert PA Mark"
        android:inputType="textPersonName"
        android:textColor="@android:color/background_dark" />

    <TextView
        android:id="@+id/textView31"
        android:layout_width="80dp"
        android:layout_height="43dp"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/textView29"
        android:layout_marginBottom="201dp"
        android:gravity="center"
        android:text="Total"
        android:textColor="@android:color/background_dark"
        android:textSize="24sp" />

    <EditText
        android:id="@+id/editText12"
        android:layout_width="236dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textView31"
        android:layout_alignStart="@+id/textView28"
        android:ems="10"
        android:hint="Total"
        android:inputType="textPersonName"
        android:textColor="@android:color/background_dark" />

    <Button
        android:id="@+id/button15"
        android:layout_width="122dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="28dp"
        android:text="Back" />

    <Button
        android:id="@+id/button6"
        android:layout_width="115dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="95dp"
        android:layout_marginStart="40dp"
        android:text="Calc" />

    <Button
        android:id="@+id/button17"
        android:layout_width="115dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/button6"
        android:layout_marginEnd="46dp"
        android:text="Reset" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="85dp"
        android:layout_height="79dp"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/textView29"
        app:srcCompat="@drawable/logo" />

</RelativeLayout>